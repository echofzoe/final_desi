<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/listview_left_right_paddiing"
    android:paddingRight="@dimen/listview_left_right_paddiing"
    android:paddingTop="@dimen/listview_top_bottom_paddiing"
    android:paddingBottom="@dimen/listview_top_bottom_paddiing"
    android:orientation="horizontal"
    android:background="@color/white">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/user_icon_size"
        android:layout_height="@dimen/user_icon_size"
        android:layout_marginStart="@dimen/user_icon_margin_left_right"
        android:layout_marginEnd="@dimen/user_icon_margin_left_right"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size_normal"
            android:text="冰糖"
            android:textColor="@color/pure_black"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/item_text_size_small"
            android:text="17826856214"/>
    </LinearLayout>
</LinearLayout>
